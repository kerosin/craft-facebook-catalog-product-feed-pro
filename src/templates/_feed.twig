{% spaceless %}
    <?xml version="1.0" encoding="UTF-8"?>
    <rss xmlns:g="http://base.google.com/ns/1.0" version="2.0">
        <channel>
            <title><![CDATA[{{ siteName }}]]></title>
            <link><![CDATA[{{ siteUrl }}]]></link>
            {% for element in elements %}
                {% if craft.facebookCatalogProductFeedPro.isIncludeElementVariants(element) %}
                    {% for variant in element.variants() %}
                        {% include 'facebook-catalog-product-feed-pro/_includes/item' with {element: variant} %}
                    {% endfor %}
                {% else %}
                    {% include 'facebook-catalog-product-feed-pro/_includes/item' %}
                {% endif %}
            {% endfor %}
        </channel>
    </rss>
{% endspaceless %}
